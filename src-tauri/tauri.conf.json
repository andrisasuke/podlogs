{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PodLogs",
  "version": "1.0.0",
  "identifier": "dev.podlogs.pass",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "PodLogs",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "backgroundColor": "#0F172A"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "resources": {
      "icons/icon_256x256.png": "icons/icon_256x256.png"
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
